generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Replies {
  idReply    Int    @id @default(autoincrement())
  reply      String
  messagesId Int

  @@index([messagesId])
}

model conseil {
  idConseil Int    @id @default(autoincrement())
  conseil   String
}

model messages {
  idMessage Int    @id @default(autoincrement())
  message   String
}

model rdv {
  idRdv            Int       @id @default(autoincrement())
  raisonVisite     String?
  dateVisite       DateTime?
  typeConsultation String?
}

model reclamation {
  idReclamation Int     @id @default(autoincrement())
  reclamation   String?
  concerne      String?
}

model user {
  id        Int    @id @default(autoincrement())
  nom       String @db.VarChar(255)
  prenom    String @db.VarChar(255)
  cite      Int?
  chambre   Int?
  mail      String @unique
  matricule Int?   @unique
  password  String @db.VarChar(255)
  role      Role   @default(ETUDIANT)
}

model medicament {
  idMedicament Int    @id @default(autoincrement())
  nom          String
  description  String
}

enum Role {
  ETUDIANT
  MEDECIN
  BUREAU
  SCOLARITE
}
